<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/item_me_bottom"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/hm_layout_item_bottom"
        style="@style/rb_item_layout">

        <ImageView
            android:id="@+id/hm_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />

        <TextView
            style="@style/hm_item_tv"
            android:id="@+id/hm_tv_item_name"
            android:layout_toRightOf="@+id/hm_iv_logo"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:id="@+id/hm_tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/search_go_btn"
            style="@style/hm_img_right"
            android:layout_height="wrap_content" />

        <View
            style="@style/BaseLine.Horizontal"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

</LinearLayout>