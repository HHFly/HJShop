<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/companyinfo_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/company_layout_name"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/company_tv_name"
                    style="@style/user_item_tv_content"
                    android:gravity="right|center_vertical"
                    android:hint="请输入公司名称"
                    android:textColorHint="#666666"
                    android:layout_marginRight="0px"
                    android:layout_toLeftOf="@+id/imageView1" />
                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView1" />
            </RelativeLayout>
        <View style="@style/BaseLine.Horizontal"/>
            <RelativeLayout
                android:id="@+id/company_layout_loacl"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="所在区域"
                    android:layout_gravity="center_vertical"
                    />

                <TextView

                    android:id="@+id/company_tv_loacl"
                    style="@style/user_item_tv_content"
                    android:layout_marginRight="0px"
                    android:layout_toLeftOf="@+id/imageView3" />

                <ImageView

                    android:id="@+id/imageView3"
                    style="@style/BaseImg.Right"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>
            <RelativeLayout
                android:id="@+id/company_layout_address"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="详细地址"
                    />

                <TextView
                    android:id="@+id/company_tv_address"
                    style="@style/user_item_tv_content"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="0px"
                    android:layout_toLeftOf="@+id/imageView4" />
                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView4" />
            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>
            <LinearLayout
                android:id="@+id/shop_layout_type"
                style="@style/user_item_layout"
               android:background="@color/white">

                <TextView
                    style="@style/user_item_tv"
                    android:layout_gravity="center_vertical"
                    android:text="店铺分类"
                    />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1.0"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textsize_26px" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/shop_tv_type"
                    style="@style/user_item_tv_content"
                    android:hint="请输入店铺分类"
                    android:textColorHint="#666666"
                    android:layout_marginRight="0px"
                    android:layout_toLeftOf="@+id/imageView2" />
                <ImageView
                    android:visibility="gone"
                    style="@style/BaseImg.Right"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_bottom_gray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView2" />

            </LinearLayout>
            <View style="@style/BaseLine.Horizontal"/>
            <RelativeLayout
                android:id="@+id/store_layout_name"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="店铺名称"
                    />

                <TextView
                    android:id="@+id/store_tv_name"
                    style="@style/user_item_tv_content"
                    android:gravity="right|center_vertical"
                    android:hint="请输入店铺名称"
                    android:textColorHint="#666666"
                    android:layout_marginRight="0px"
                    android:layout_toLeftOf="@+id/imageView5" />
                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView5" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="43px"
                    android:layout_marginLeft="31px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照"
                    android:textColor="#666666"
                    android:textSize="@dimen/textsize_26px"
                    android:id="@+id/textView2" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_marginLeft="16px"
                    android:layout_toEndOf="@+id/textView2"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/imagebtn_licence"
                        style="@style/BaseSDV"
                        android:layout_width="200px"
                        android:layout_height="180px"
                        android:background="@mipmap/gird_storeimg_update"

                        />


                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="43px"
                    android:layout_marginLeft="31px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店面形象"
                    android:textColor="#666666"
                    android:textSize="@dimen/textsize_26px"
                    android:id="@+id/textView5" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginLeft="16px"
                    android:layout_toEndOf="@+id/textView5"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/imagebtn_shop"
                        style="@style/BaseSDV"
                        android:layout_width="200px"
                        android:layout_height="180px"
                        android:background="@mipmap/gird_storeimg_update"

                        />


                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="43px"
                    android:layout_marginLeft="31px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店内照片"
                    android:textColor="#666666"
                    android:textSize="@dimen/textsize_26px"
                    android:id="@+id/textView3" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="28px"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_sdv_1"
                        style="@style/BaseSDV.AspectRatio"
                        android:layout_width="200px"
                        android:layout_height="180px"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="15px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/gird_storeimg_update" />

                    <ImageView

                        android:id="@+id/item_iv_delete_1"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="180px"
                        android:src="@mipmap/ic_delete_black" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/item_rl_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63px"
                    android:layout_marginTop="28px"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_sdv_2"
                        style="@style/BaseSDV.AspectRatio"
                        android:layout_width="200px"
                        android:layout_height="180px"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="15px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/gird_storeimg_update" />

                    <ImageView
                        android:id="@+id/item_iv_delete_2"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="180px"
                        android:src="@mipmap/ic_delete_black" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="57px">

                <TextView
                    android:layout_marginTop="43px"
                    android:layout_marginLeft="31px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店内照片"
                    android:textColor="@color/background"
                    android:textSize="@dimen/textsize_26px"
                    />
                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/item_rl_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16px"
                    android:layout_marginTop="43px"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_sdv_3"
                        style="@style/BaseSDV.AspectRatio"
                        android:layout_width="200px"
                        android:layout_height="180px"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="15px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/gird_storeimg_update" />

                    <ImageView
                        android:id="@+id/item_iv_delete_3"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="180px"
                        android:src="@mipmap/ic_delete_black" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="visible"
                    android:id="@+id/item_rl_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="63px"
                    android:layout_marginTop="43px"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/item_sdv_4"
                        style="@style/BaseSDV.AspectRatio"
                        android:layout_width="200px"
                        android:layout_height="180px"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="15px"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@mipmap/gird_storeimg_update" />

                    <ImageView
                        android:id="@+id/item_iv_delete_4"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginLeft="180px"
                        android:src="@mipmap/ic_delete_black" />

                </RelativeLayout>

            </LinearLayout>


            <Button
                android:id="@+id/button"
                style="@style/BaseBtn.Normal.Important"
                android:layout_width="match_parent"
                android:text="@string/me_申请商户" />
            <LinearLayout
                android:id="@+id/layout_agree"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/register_layout_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="60px">

                    <ImageView
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginRight="13px"
                        android:src="@drawable/select_radio" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_msg_agree"
                        android:textColor="#aaaaaa"
                        android:textSize="@dimen/textsize_24px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/register_tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="《商家入驻协议》"
                    android:textColor="#ff385c"
                    android:textSize="@dimen/textsize_24px" />


            </LinearLayout>
        </LinearLayout>




    </ScrollView>
</LinearLayout>
