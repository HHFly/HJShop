<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_dialog_normal_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:visibility="gone"
                android:id="@+id/normal_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="温馨提示"
                android:textColor="#333333"
                android:textSize="@dimen/textsize_30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/normal_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="29dp"
                android:text="test"
                android:textColor="#333333"
                android:textSize="22dp" />


            <View style="@style/BaseLine.Horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp">

                <Button
                    android:id="@+id/normal_btn_left"
                    style="@style/BaseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="0dp"
                    android:text="@string/btn_msg_cancel"
                    android:textColor="#999999"
                    android:textSize="@dimen/textsize_30px" />

                <View style="@style/BaseLine.Vertical" />

                <Button
                    android:id="@+id/normal_btn_right"
                    style="@style/BaseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="0dp"
                    android:text="@string/btn_msg_ok"
                    android:textColor="@color/color_main_blue"
                    android:textSize="@dimen/textsize_30px" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_width="60dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
           />
    </RelativeLayout>

</LinearLayout>