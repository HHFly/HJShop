<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="30px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_white_16px">
    <include

        layout="@layout/item_oreder_steptwo_1"
       />
    <include

        layout="@layout/item_order_steptwo_2"/>
    <include
      
        layout="@layout/item_order_steptwo_3"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_1"
          style="@style/BaseItem.Tv"
            android:text="本步骤总倒计时："
            android:textSize="24px"
            android:textColor="#FF333333"/>
        <TextView
            android:id="@+id/tv_time_count"
            style="@style/BaseItem.Tv"
            android:text=""
            android:textSize="24px"
            android:textColor="#FF289BF8"
            android:layout_toEndOf="@+id/tv_1"/>
        <View
            android:id="@+id/tv_2"
            android:layout_below="@+id/tv_1"
            android:layout_marginTop="10px"
          style="@style/BaseLine.Horizontal"/>
        <TextView
            android:id="@+id/tv_3"
            style="@style/BaseItem.Tv"
            android:text="活动剩余时间："
            android:textSize="24px"
            android:textColor="#FF333333"
            android:layout_below="@+id/tv_2"
            android:layout_marginTop="10px"/>
        <TextView
            android:id="@+id/tv_all_time_count"
            style="@style/BaseItem.Tv"
            android:text=""
            android:textSize="24px"
            android:textColor="#FF289BF8"
            android:layout_alignTop="@id/tv_3"
            android:layout_toEndOf="@+id/tv_3"/>
    </RelativeLayout>
        </LinearLayout>

    <TextView
        style="@style/BaseItem.Tv"
        android:textColor="#FF999999"
        android:textSize="24px"
        android:singleLine="false"
        android:text="@string/注意事项"
        android:lineSpacingExtra="10px"
        android:layout_marginTop="25px"/>

</LinearLayout>