<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/hm_layout_user"
            android:layout_width="match_parent"
            android:layout_height="320px"
            android:background="@color/color_main_blue">

            <RelativeLayout
                android:layout_width="125px"
                android:layout_height="125px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40px"
                android:background="@drawable/shape_circle_white"
                app:layout_auto_basewidth="height">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/hm_sdv_logo"
                    style="@style/BaseSDV"
                    android:layout_width="120px"
                    android:layout_height="120px"
                    android:layout_centerInParent="true"
                    app:layout_auto_basewidth="height"
                    app:placeholderImage="@mipmap/ic_launcher"
                    app:roundAsCircle="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/hm_tv_user_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="183px"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="28px" />

            <ImageView
                style="@style/BaseImg.Right.White"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="43px" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_marginTop="-55px"
            android:background="@drawable/shape_hm_bg"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/hm_layout_balance"
                style="@style/home_me_tab_layout"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/hm_tv_balance"
                    style="@style/home_me_tab_tv_top"
                    android:text="￥1200"
                    android:textColor="#fe5262" />

                <TextView
                    style="@style/home_me_tab_tv_bottom"
                    android:text="@string/me_余额" />

            </LinearLayout>

            <View
                style="@style/BaseLine.Vertical"
                android:layout_marginBottom="33px"
                android:layout_marginTop="33px"
                />

            <LinearLayout
                android:id="@+id/hm_layout_red"
                style="@style/home_me_tab_layout"
                >

                <TextView
                    android:id="@+id/hm_tv_red"
                    style="@style/home_me_tab_tv_top"
                    android:text="10个"
                    android:textColor="#fea434" />

                <TextView
                    style="@style/home_me_tab_tv_bottom"
                    android:text="@string/me_金豆" />

            </LinearLayout>

            <View
                style="@style/BaseLine.Vertical"
                android:layout_marginBottom="33px"
                android:layout_marginTop="33px" />

            <LinearLayout
                android:id="@+id/hm_layout_integral"
                style="@style/home_me_tab_layout">

                <TextView
                    android:id="@+id/hm_tv_integral"
                    style="@style/home_me_tab_tv_top"
                    android:text="641分"
                    android:textColor="#289BF8" />

                <TextView
                    style="@style/home_me_tab_tv_bottom"
                    android:text="@string/me_积分" />

            </LinearLayout>

        </LinearLayout>







    </LinearLayout>
</LinearLayout>