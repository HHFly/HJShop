<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_hm_bg"
    android:layout_marginTop="@dimen/textsize_20px"
    android:layout_marginRight="30px"
    android:layout_marginLeft="30px"
    android:layout_marginBottom="@dimen/textsize_20px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86px"
        android:paddingLeft="40px"
        android:paddingRight="28px">
        <ImageView
            android:id="@+id/Image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:src="@mipmap/store"/>
        <TextView
            android:id="@+id/store_name"
            android:layout_toEndOf="@+id/Image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#666666"
            android:textSize="26px"
            android:text=""/>
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="26px"

            android:textColor="#333333"
            android:text=""/>
    </RelativeLayout>

    <View
        style="@style/BaseLine.Horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="@dimen/textsize_20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/textsize_20px">
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textsize_10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:paddingBottom="@dimen/textsize_10px">

            <TextView
                android:id="@+id/newUserDay"
                android:text=""
                style="@style/Bill_right"/>
            <TextView

                android:text="今日新增会员"
                style="@style/Bill_left" />
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textsize_10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:paddingBottom="@dimen/textsize_10px">

            <TextView
                android:id="@+id/userTotal"
                android:text=""
                style="@style/Bill_right"/>
            <TextView
                android:text="会员总数"
                style="@style/Bill_left" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textsize_10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:paddingBottom="@dimen/textsize_10px">

            <TextView
                android:id="@+id/customsDay"
                android:text=""
                style="@style/Bill_right"/>
            <TextView
                android:text="今日报单金额"
                style="@style/Bill_left" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textsize_10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:paddingBottom="@dimen/textsize_10px">

            <TextView
                android:id="@+id/beanIncomeDay"
                android:text=""
                style="@style/Bill_right"/>
            <TextView
                android:text="今日金豆收入"
                style="@style/Bill_left" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ri_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textsize_10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:paddingBottom="@dimen/textsize_10px">

            <TextView
                android:id="@+id/customsMonth"
                android:text=""
                style="@style/Bill_right"/>
            <TextView
                android:text="当月报单金额"
                style="@style/Bill_left" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/textsize_10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:paddingBottom="@dimen/textsize_10px">

            <TextView
                android:id="@+id/beanIncomeMonth"
                android:text=""
                style="@style/Bill_right"/>
            <TextView
                android:text="当月金豆收入"
                style="@style/Bill_left" />
        </RelativeLayout>
    </LinearLayout>
    <View
        style="@style/BaseLine.Horizontal"
        android:layout_marginLeft="40px"
        android:layout_marginRight="@dimen/textsize_20px"/>
    <LinearLayout
        android:id="@+id/rl_4"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:paddingTop="26px">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="28px"
        android:paddingLeft="40px"
        >

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/turnOverMonth"
            android:text=""
            style="@style/Bill_right"/>
        <TextView
            android:layout_centerVertical="true"
            android:text="当月营业额"
            style="@style/Bill_left" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            >
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/turnOverTotal"
                android:text=""
                style="@style/Bill_right"/>
            <TextView
                android:layout_centerVertical="true"
                android:text="总营业额"
                style="@style/Bill_left" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>