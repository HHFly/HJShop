<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="15dp"
    android:background="@drawable/shape_white_16px">
    <TextView
        android:id="@+id/tv_subOrderSn"
        style="@style/BaseItem.Tv"
        android:textColor="#999999"
        android:textSize="14dp"
        android:layout_marginTop="15dp"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hm_sdv_productPic"
        style="@style/BaseSDV"
        android:layout_width="70dp"
        android:layout_height="71dp"
        android:layout_below="@+id/tv_subOrderSn"
        android:layout_marginTop="15dp"
        app:placeholderImage="@mipmap/ic_logo"
        app:roundAsCircle="false" />
    <TextView
        android:id="@+id/tv_1"
        style="@style/BaseItem.Tv"
        android:textSize="12dp"
        android:textColor="#333333"
        android:text="@string/活动类型"
        android:layout_below="@+id/tv_subOrderSn"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="7dp"
        />
    <TextView
        android:id="@+id/tv_2"
        style="@style/BaseItem.Tv"
        android:textSize="12dp"
        android:textColor="#333333"
        android:text="@string/垫付贷款"
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="7dp"
        />
    <TextView
        android:id="@+id/tv_3"
        style="@style/BaseItem.Tv"
        android:textSize="12dp"
        android:textColor="#333333"
        android:text="@string/活动赏金"
        android:layout_below="@+id/tv_2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:id="@+id/tv_orderType"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_1"
        android:layout_toRightOf="@+id/tv_1"
        android:textColor="#FF6D85"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/tv_shopPayPrice"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_2"
        android:layout_toRightOf="@+id/tv_2"
        android:textSize="12dp"
        android:textColor="#333333"
        />
    <TextView
        android:id="@+id/tv_gold"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_3"
        android:layout_toRightOf="@+id/tv_3"
        android:textSize="12dp"
        android:textColor="#333333"
        android:text="@string/元"
        />
    <com.mark.app.hjshop4a.widget.OrderLinearLayout
        android:id="@+id/warp_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_3"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="7dp"
        app:horizontal_Space="5dp"
        app:vertical_Space="4dp"
        app:grivate="left"
        app:titleSize="12dp"
        app:tipSize="10dp"
        ></com.mark.app.hjshop4a.widget.OrderLinearLayout>
    <Button
        android:id="@+id/order_btn_getOrder"
        style="@style/BaseBtn.Normal.Important"
       android:layout_height="30dp"
        android:text="@string/抢此任务"
        android:layout_marginTop="9dp"
        android:textColor="@drawable/select_color_blue_white"
        android:layout_below="@+id/warp_label"
        android:textSize="14dp"
        android:background="@drawable/select_btn_normal_important2"
        />

</RelativeLayout>