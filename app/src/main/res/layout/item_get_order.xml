<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20px"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:paddingLeft="16px"
    android:paddingRight="16px"
    android:background="@drawable/shape_white_16px">
    <TextView
        android:id="@+id/tv_subOrderSn"
        style="@style/BaseItem.Tv"
        android:textColor="#999999"
        android:textSize="28px"
        android:layout_marginTop="30px"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hm_sdv_productPic"
        style="@style/BaseSDV"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_below="@+id/tv_subOrderSn"
        android:layout_marginTop="30px"
        app:layout_auto_basewidth="height"
        app:placeholderImage="@mipmap/ic_logo"
        app:roundAsCircle="false" />
    <TextView
        android:id="@+id/tv_1"
        style="@style/BaseItem.Tv"
        android:textSize="24px"
        android:textColor="#333333"
        android:text="@string/活动类型"
        android:layout_below="@+id/tv_subOrderSn"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="14px"
        />
    <TextView
        android:id="@+id/tv_2"
        style="@style/BaseItem.Tv"
        android:textSize="24px"
        android:textColor="#333333"
        android:text="@string/垫付贷款"
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="14px"
        />
    <TextView
        android:id="@+id/tv_3"
        style="@style/BaseItem.Tv"
        android:textSize="24px"
        android:textColor="#333333"
        android:text="@string/活动赏金"
        android:layout_below="@+id/tv_2"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="14px"
        />

    <TextView
        android:id="@+id/tv_orderType"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_1"
        android:layout_toRightOf="@+id/tv_1"
        android:textColor="#FF6D85"
        android:textSize="24px"
        />

    <TextView
        android:id="@+id/tv_shopPayPrice"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_2"
        android:layout_toRightOf="@+id/tv_2"
        android:textSize="24px"
        android:textColor="#333333"
        />
    <TextView
        android:id="@+id/tv_gold"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_3"
        android:layout_toRightOf="@+id/tv_3"
        android:textSize="24px"
        android:textColor="#333333"
        android:text="@string/元"
        />
    <com.mark.app.hjshop4a.widget.OrderLinearLayout
        android:id="@+id/warp_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_3"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="14px"
        app:horizontal_Space="10px"
        app:vertical_Space="8px"
        app:grivate="left"
        ></com.mark.app.hjshop4a.widget.OrderLinearLayout>
    <Button
        android:id="@+id/order_btn_getOrder"
        style="@style/BaseBtn.Normal.Important"
       android:layout_height="60px"
        android:text="@string/抢此任务"
        android:layout_marginTop="18px"
        android:textColor="@drawable/select_color_blue_white"
        android:layout_below="@+id/warp_label"
        android:textSize="28px"
        android:background="@drawable/select_btn_normal_important2"
        />

</RelativeLayout>