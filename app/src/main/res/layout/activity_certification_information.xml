<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_layout_user_name"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="姓名" />

            <TextView
                android:id="@+id/user_tv_user_name"
                style="@style/user_item_tv_content"
                android:layout_marginRight="0px"
                android:layout_toLeftOf="@+id/imageView4" />
            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView4" />
        </RelativeLayout>
        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="30px" />
        <RelativeLayout
            android:id="@+id/user_layout_user_sex"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="@string/user_msg_性别"
                 />

            <TextView
                android:id="@+id/user_tv_user_sex"
                style="@style/user_item_tv_content"
                android:layout_marginRight="0px"
                android:layout_toLeftOf="@+id/imageView3" />
            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView3" />

        </RelativeLayout>
        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="30px" />
        <RelativeLayout
            android:id="@+id/user_layout_user_date"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="@string/user_msg_出生日期"
                />

            <TextView
                android:id="@+id/user_tv_user_date"
                style="@style/user_item_tv_content"
                android:layout_marginRight="0px"
                android:layout_toLeftOf="@+id/imageView5" />
            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView5" />

        </RelativeLayout>

        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="30px" />

        <RelativeLayout
            android:id="@+id/user_layout_user_invitation"
            style="@style/user_item_layout"

           >

            <TextView
                style="@style/user_item_tv"
                android:text="@string/certification_推荐人" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:id="@+id/rl_id_card"
        style="@style/user_item_layout"
        android:background="@drawable/select_normal_bg">

        <TextView
            style="@style/user_item_tv"
            android:text="身份证号码" />

        <TextView
            android:id="@+id/tv_id_card"
            style="@style/user_item_tv_content"
            android:layout_marginRight="0px"
            android:layout_toLeftOf="@+id/imageView6" />
        <ImageView
            style="@style/BaseImg.Right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/imageView6" />

        <TextView
            android:id="@+id/certification_tv_user_invitation"
            style="@style/user_item_tv_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:layout_toStartOf="@+id/tv_id_card" />
    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/rl_id_card_img"
        style="@style/user_item_layout"
        android:background="@drawable/select_normal_bg">

        <TextView
            style="@style/user_item_tv"
            android:text="身份证号码" />

        <TextView

            style="@style/user_item_tv_content"
            android:layout_marginRight="0px"
            android:layout_alignParentRight="true"
            />
        <ImageView
            style="@style/BaseImg.Right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
             />
    </RelativeLayout>
</LinearLayout>
