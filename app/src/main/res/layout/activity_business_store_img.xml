<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
<include layout="@layout/include_titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="43px"
            android:layout_marginLeft="31px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_26px"
            android:id="@+id/textView2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView2"
           android:layout_marginLeft="16px"
            android:layout_toEndOf="@+id/textView2"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imagebtn"
                style="@style/BaseSDV"
                android:layout_width="200px"
                android:layout_height="180px"
                android:background="@mipmap/gird_storeimg_update"

               />


        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="43px"
        android:layout_marginLeft="31px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店内形象"
        android:textColor="#666666"
        android:textSize="@dimen/textsize_26px"
        android:id="@+id/textView3" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginTop="28px"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_sdv_1"
            style="@style/BaseSDV.AspectRatio"
            android:layout_width="200px"
            android:layout_height="180px"
            android:layout_marginRight="15px"
            android:layout_marginTop="15px"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@mipmap/gird_storeimg_update" />

        <ImageView

            android:id="@+id/item_iv_delete_1"
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="180px"
            android:src="@mipmap/ic_delete_black" />

    </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/item_rl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63px"
            android:layout_marginTop="28px"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_sdv_2"
                style="@style/BaseSDV.AspectRatio"
                android:layout_width="200px"
                android:layout_height="180px"
                android:layout_marginRight="15px"
                android:layout_marginTop="15px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/gird_storeimg_update" />

            <ImageView
                android:id="@+id/item_iv_delete_2"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="180px"
                android:src="@mipmap/ic_delete_black" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="43px"
            android:layout_marginLeft="31px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店内形象"
            android:textColor="@color/background"
            android:textSize="@dimen/textsize_26px"
             />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/item_rl_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="43px"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_sdv_3"
                style="@style/BaseSDV.AspectRatio"
                android:layout_width="200px"
                android:layout_height="180px"
                android:layout_marginRight="15px"
                android:layout_marginTop="15px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/gird_storeimg_update" />

            <ImageView
                android:id="@+id/item_iv_delete_3"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="180px"
                android:src="@mipmap/ic_delete_black" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/item_rl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63px"
            android:layout_marginTop="43px"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_sdv_4"
                style="@style/BaseSDV.AspectRatio"
                android:layout_width="200px"
                android:layout_height="180px"
                android:layout_marginRight="15px"
                android:layout_marginTop="15px"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/gird_storeimg_update" />

            <ImageView
                android:id="@+id/item_iv_delete_4"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="180px"
                android:src="@mipmap/ic_delete_black" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>