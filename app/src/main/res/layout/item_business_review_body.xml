<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >


    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_hm_bg"
        android:layout_marginTop="@dimen/textsize_20px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="86px"
            android:paddingLeft="40px"
            android:paddingRight="28px">
            <ImageView
                android:id="@+id/Image_logo_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:src="@mipmap/store"/>
            <TextView
                android:id="@+id/shopName_2"
                android:layout_toEndOf="@+id/Image_logo_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#666666"
                android:textSize="26px"
                android:text=""/>
            <TextView
                android:id="@+id/business_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="24px"
                android:padding="13px"
                android:background="@drawable/shape_slide_1px_blue"
                android:textColor="#FF289BF8"
                android:text="查看"/>
        </RelativeLayout>

        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="40px"
            android:layout_marginRight="@dimen/textsize_20px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/textsize_20px">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/textsize_10px"
                android:paddingRight="28px"
                android:paddingLeft="40px"
                android:paddingBottom="@dimen/textsize_10px">

                <TextView
                    android:id="@+id/userName_2"
                    android:text=""
                    style="@style/Bill_right"/>
                <TextView
                    android:text="店主"
                    style="@style/Bill_left" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/textsize_10px"
                android:paddingRight="28px"
                android:paddingLeft="40px"
                android:paddingBottom="@dimen/textsize_10px">

                <TextView
                    android:id="@+id/cellPhone_2"
                    android:text=""
                    style="@style/Bill_right"/>
                <TextView
                    android:text="联系方式"
                    style="@style/Bill_left" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/textsize_10px"
                android:paddingRight="28px"
                android:paddingLeft="40px"
                android:paddingBottom="@dimen/textsize_10px">

                <TextView
                    android:id="@+id/applyTime_2"
                    android:text=""
                    style="@style/Bill_right"/>
                <TextView
                    android:text="申请时间"
                    style="@style/Bill_left" />
            </RelativeLayout>



        </LinearLayout>
        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="40px"
            android:layout_marginRight="@dimen/textsize_20px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:id="@+id/rl_1"
            android:paddingRight="28px"
            android:paddingLeft="40px"
            android:layout_marginTop="@dimen/textsize_20px"
            android:layout_marginBottom="@dimen/textsize_20px"
            >
            <RelativeLayout
                android:id="@+id/rl_review_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_1_pass"
                android:layout_width="120px"
                android:layout_height="60px"

                android:layout_alignTop="@+id/tv_1_unpass"
                android:gravity="center"
                android:layout_marginEnd="36px"
                android:layout_toStartOf="@+id/tv_1_unpass"
                android:background="@drawable/shape_btn_small_click_fill"
                android:text="通过"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tv_1_unpass"
                android:text="不通过"
                android:background="@drawable/shape_btn_5px_red"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_width="120px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                style="@style/Bill_right"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/auditStatusProxy"
                android:text=""
                android:layout_centerVertical="true"
                style="@style/Bill_right"/>
            <TextView
                android:layout_centerVertical="true"
                android:text="代理审核状态"
                style="@style/Bill_left" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="40px"
            android:paddingRight="28px">
        <RelativeLayout
            android:id="@+id/rl_review_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_2_pass"
                android:layout_width="120px"
                android:layout_height="60px"

                android:layout_alignTop="@+id/tv_2_unpass"
                android:layout_marginEnd="36px"
                android:layout_toStartOf="@+id/tv_2_unpass"
                android:background="@drawable/shape_btn_small_click_fill"
                android:gravity="center"
                android:text="通过"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_2_unpass"
                style="@style/Bill_right"
                android:layout_width="120px"
                android:layout_height="60px"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_btn_5px_red"
                android:gravity="center"
                android:text="不通过"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
            <TextView
                android:id="@+id/auditStatusProvice"
                android:text=""
                android:layout_centerVertical="true"
                style="@style/Bill_right"/>
            <TextView
                style="@style/Bill_left"
                android:layout_centerVertical="true"
                android:text="管理员审核状态" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>