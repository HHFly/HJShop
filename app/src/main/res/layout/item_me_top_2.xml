<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hm_sdv_logo"
        style="@style/BaseSDV"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="43px"
        app:layout_auto_basewidth="height"
        app:placeholderImage="@mipmap/ic_logo"
        app:roundAsCircle="true" />
    <TextView
        android:id="@+id/hm_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/textsize_30px"
        android:textColor="#333333"
        android:textSize="36px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="53px"
        >
        <ImageView
            android:layout_width="40px"
            android:layout_height="38px"
            android:layout_marginLeft="30px"
            android:layout_gravity="center_vertical"
            />
        <TextView
           style="@style/BaseItem.Tv"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="28px"
            android:layout_marginLeft="16px"
            android:text="@string/资金钱袋"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_mesage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="29px"
        android:background="@drawable/shape_hm_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/hm_layout_red"
            style="@style/home_me_tab_layout"
            android:layout_height="wrap_content">

            <TextView
                style="@style/home_me_tab_tv_bottom"
                android:text="@string/金币余额" />

            <TextView
                android:id="@+id/hm_tv_red"
                style="@style/home_me_tab_tv_top"
                android:layout_marginTop="25px"
                android:text=""
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="314px"
                android:layout_height="89px"
                android:layout_marginTop="39px"
                android:background="@drawable/shape_me_1">
                <ImageView
                    android:layout_width="58px"
                    android:layout_height="58px"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16px"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hm_layout_balance"
            style="@style/home_me_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                style="@style/home_me_tab_tv_bottom"
                android:text="@string/贷款余额" />

            <TextView
                android:id="@+id/hm_tv_balance"
                style="@style/home_me_tab_tv_top"
                android:layout_marginTop="25px"
                android:text=""
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="314px"
                android:layout_height="89px"
                android:layout_marginTop="39px"
                android:background="@drawable/shape_me_2">

                <ImageView
                    android:layout_width="58px"
                    android:layout_height="58px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16px" />

            </RelativeLayout>

        </LinearLayout>

        <View
            style="@style/BaseLine.Vertical"
            android:layout_marginBottom="33px"
            android:layout_marginTop="33px" />


    </LinearLayout>
</LinearLayout>