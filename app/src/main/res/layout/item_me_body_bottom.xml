<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_body_bottom"
    android:layout_marginBottom="40px"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/hm_layout_item_about"
        android:layout_height="168px"
        android:layout_width="match_parent"
        android:gravity="left">
        <RelativeLayout
            style="@style/hm_item_layout_lab"
            android:id="@+id/hm_lab1"
            >
            <ImageView
                android:id="@+id/me_iv_lab1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_marginLeft="53px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37px"
                android:src="@mipmap/ic_left_white"
               
                app:layout_auto_basewidth="height" />

            <ImageView
                android:id="@+id/titlebar_iv_payment_count"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_alignTop="@+id/me_iv_lab1"
                android:layout_alignRight="@+id/me_iv_lab1"
                android:visibility="gone"
                android:background="@drawable/shape_circle_red"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/me_tv_lab1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="26px"
                android:text="@string/me_待付款"
                android:textColor="#555555"
                android:layout_below="@id/me_iv_lab1"
                android:layout_marginTop="24px"

                />
        </RelativeLayout>

        <RelativeLayout
            style="@style/hm_item_layout_lab"
            android:id="@+id/hm_lab2"

            >
            <ImageView
                android:id="@+id/me_iv_lab2"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37px"
               
                android:src="@mipmap/ic_left_white"
                app:layout_auto_basewidth="height" />

            <ImageView
                android:id="@+id/titlebar_iv_Deliver_count"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_alignTop="@+id/me_iv_lab2"
                android:layout_alignRight="@+id/me_iv_lab2"
                android:background="@drawable/shape_circle_red"
                android:visibility="gone"
                app:layout_auto_basewidth="height" />

            <TextView
                android:id="@+id/me_tv_lab2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="24px"
                android:layout_below="@+id/me_iv_lab2"
                android:layout_centerHorizontal="true"
                android:textSize="26px"
                android:text="@string/me_待发货"
                android:textColor="#555555"
                />
        </RelativeLayout>

        <RelativeLayout
            style="@style/hm_item_layout_lab"
            android:id="@+id/hm_lab3"
            >
            <ImageView
                android:id="@+id/me_iv_lab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37px"
               
                android:src="@mipmap/ic_left_white"
                app:layout_auto_basewidth="height" />
            <ImageView
                android:id="@+id/titlebar_iv_Received_count"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_alignTop="@+id/me_iv_lab3"
                android:layout_alignRight="@+id/me_iv_lab3"
                android:background="@drawable/shape_circle_red"
                android:visibility="gone"
                app:layout_auto_basewidth="height" />
            <TextView
                android:id="@+id/me_tv_lab3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/me_iv_lab3"
                android:layout_marginTop="24px"
                android:textSize="26px"
                android:text="@string/me_已收货"
                android:textColor="#555555"
                />
        </RelativeLayout>
        <RelativeLayout
            style="@style/hm_item_layout_lab"
            android:id="@+id/hm_lab4"
            >
            <ImageView
                android:id="@+id/me_iv_lab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37px"
               
                android:src="@mipmap/ic_left_white"
                app:layout_auto_basewidth="height" />
            <ImageView
                android:id="@+id/titlebar_iv_Finsh_count"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_alignTop="@+id/me_iv_lab4"
                android:layout_alignRight="@+id/me_iv_lab4"
                android:background="@drawable/shape_circle_red"
                android:visibility="gone"
                app:layout_auto_basewidth="height" />
            <TextView
                android:id="@+id/me_tv_lab4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24px"
                android:layout_below="@+id/me_iv_lab4"
                android:textSize="26px"
                android:text="@string/me_已收货"
                android:textColor="#555555"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>