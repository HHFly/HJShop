<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
<include layout="@layout/include_titlebar"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="30px">

                <EditText
                    android:id="@+id/et_wangwangname"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@null"
                    android:hint="旺旺名称："
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="26px" />

                <View style="@style/BaseLine.Horizontal" />

                <EditText
                    android:id="@+id/et_recivename"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@null"
                    android:hint="收货人名称："
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="26px" />

                <View style="@style/BaseLine.Horizontal" />`

                <EditText
                    android:id="@+id/et_recivephone"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@null"
                    android:hint="收货人电话："
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="26px" />

                <View style="@style/BaseLine.Horizontal" />

                <RelativeLayout
                    android:id="@+id/certification_layout_user_city"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@drawable/select_normal_bg">

                    <TextView
                        style="@style/user_item_tv"
                        android:text="收货地址："
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/certification_tv_user_city"
                        style="@style/user_item_tv_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="63px"
                        android:textColor="#333333"

                        android:textSize="28px" />

                    <ImageView
                        style="@style/BaseImg.Right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px" />
                </RelativeLayout>

                <View style="@style/BaseLine.Horizontal" />

                <EditText
                    android:id="@+id/et_reciveaddress"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@null"
                    android:hint="详细地址： 如道路、门牌号、楼栋号、单元室等"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="26px" />

                <View style="@style/BaseLine.Horizontal" />`

                <RelativeLayout
                    android:id="@+id/user_layout_user_sex"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@drawable/select_normal_bg">

                    <TextView
                        style="@style/user_item_tv"
                        android:text="@string/user_msg_性别"
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/user_tv_user_sex"
                        style="@style/user_item_tv_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="63px"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <ImageView
                        style="@style/BaseImg.Right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px" />

                </RelativeLayout>

                <View style="@style/BaseLine.Horizontal" />`

                <RelativeLayout
                    android:id="@+id/user_layout_user_level"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@drawable/select_normal_bg">

                    <TextView
                        style="@style/user_item_tv"
                        android:text="账号等级："
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/user_tv_user_level"
                        style="@style/user_item_tv_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="63px"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <ImageView
                        style="@style/BaseImg.Right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px" />

                </RelativeLayout>

                <View style="@style/BaseLine.Horizontal" />`

                <RelativeLayout
                    android:id="@+id/user_layout_user_shoptype"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@drawable/select_normal_bg">

                    <TextView
                        style="@style/user_item_tv"
                        android:text="购物类型："
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/user_tv_user_shoptype"
                        style="@style/user_item_tv_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="63px"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <ImageView
                        style="@style/BaseImg.Right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px" />

                </RelativeLayout>

                <View style="@style/BaseLine.Horizontal" />`

                <RelativeLayout
                    android:id="@+id/user_layout_user_ishuabei"
                    android:layout_width="match_parent"
                    android:layout_height="98px"
                    android:background="@drawable/select_normal_bg">

                    <TextView
                        style="@style/user_item_tv"
                        android:text="是否开通花呗："
                        android:textColor="#999999"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/user_tv_user_ishuabei"
                        style="@style/user_item_tv_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="63px"
                        android:textColor="#333333"
                        android:textSize="28px" />

                    <ImageView
                        style="@style/BaseImg.Right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30px" />

                </RelativeLayout>
            </LinearLayout>

            <com.mark.app.hjshop4a.widget.UpdateImgLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="43px"
                app:img ="@mipmap/about"
                app:tipimg="@mipmap/home"
                app:title="账号等级图片：">

            </com.mark.app.hjshop4a.widget.UpdateImgLayout>
            <com.mark.app.hjshop4a.widget.UpdateImgLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="43px"
                app:img ="@mipmap/about"
                app:tipimg="@mipmap/home"
                app:title="花呗图片：">

            </com.mark.app.hjshop4a.widget.UpdateImgLayout>
            <com.mark.app.hjshop4a.widget.UpdateImgLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="43px"
                app:img ="@mipmap/about"
                app:tipimg="@mipmap/home"
                app:title="账号认证图片：">

            </com.mark.app.hjshop4a.widget.UpdateImgLayout>

            <Button
                android:id="@+id/btn"
                style="@style/BaseBtn.Normal.Important"
                android:layout_width="match_parent"
                android:text="@string/提交"
                android:layout_marginTop="89px"

                android:textSize="28px"/>
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>