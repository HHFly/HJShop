<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_layout_photo"
            style="@style/user_item_layout">

            <TextView
                style="@style/user_item_tv"
                android:text="@string/user_msg_logo" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_sdv_user_logo"
                style="@style/BaseSDV.Circle"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:layout_auto_basewidth="height"
                app:placeholderImage="@mipmap/ic_close_white" />

        </RelativeLayout>

        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="30px" />

        <RelativeLayout
            android:id="@+id/user_layout_user_name"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="@string/user_msg_user_name" />

            <TextView
                android:id="@+id/user_tv_user_name"
                style="@style/user_item_tv_content"
                android:layout_marginRight="0px"
                android:layout_toLeftOf="@+id/imageView4" />
            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView4" />
        </RelativeLayout>
        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="30px" />
        <RelativeLayout
            android:id="@+id/user_layout_user_sex"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="@string/user_msg_性别"
                 />

            <TextView
                android:id="@+id/user_tv_user_sex"
                style="@style/user_item_tv_content"
                android:layout_marginRight="0px"
                android:layout_toLeftOf="@+id/imageView3" />
            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView3" />

        </RelativeLayout>
        <View
            style="@style/BaseLine.Horizontal"
            android:layout_marginLeft="30px" />
        <RelativeLayout
            android:id="@+id/user_layout_user_date"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="@string/user_msg_出生日期"
                />

            <TextView
                android:id="@+id/user_tv_user_date"
                style="@style/user_item_tv_content"
                android:layout_marginRight="0px"
                android:layout_toLeftOf="@+id/imageView5" />
            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/imageView5" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"


       />
    <RelativeLayout
        android:id="@+id/user_layout_certification"
        style="@style/user_item_layout"
        android:background="@drawable/select_normal_bg">


        <TextView
            style="@style/user_item_tv"
            android:text="@string/user_msg_实名认证" />



        <ImageView
            style="@style/BaseImg.Right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/imageView" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <RelativeLayout
        android:id="@+id/user_layout_pwd_modify"
        style="@style/user_item_layout"
        android:background="@drawable/select_normal_bg">


        <TextView
            style="@style/user_item_tv"

            android:text="@string/user_msg_pwd_modify" />

        <ImageView
            style="@style/BaseImg.Right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/imageView2" />

    </RelativeLayout>

</LinearLayout>
