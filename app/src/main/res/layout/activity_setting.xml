<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <include layout="@layout/include_titlebar" />
    <RelativeLayout
        android:id="@+id/setting_change_psw"
        style="@style/user_item_layout"
        android:layout_marginTop="6dp"
        android:background="@drawable/select_normal_bg">

        <TextView
            style="@style/user_item_tv"
            android:text="@string/setting_密码修改" />


        <ImageView
            android:id="@+id/imageView4"
            style="@style/BaseImg.Right"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp" />
    </RelativeLayout>
    <View
        style="@style/BaseLine.Horizontal"
        android:layout_marginLeft="15dp" />

    <RelativeLayout
        android:id="@+id/setting_clearsd"
        style="@style/user_item_layout"
        android:background="@drawable/select_normal_bg">

        <TextView
            style="@style/user_item_tv"
            android:text="@string/setting_清除缓存" />



        <TextView
            android:id="@+id/setting_tv_cache"
            style="@style/user_item_tv_content"
            android:textSize="12dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        style="@style/BaseLine.Horizontal"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/setting_login_out"
        style="@style/BaseBtn.Normal.Important"
        android:layout_width="match_parent"
        android:layout_marginTop="29dp"
        android:text="@string/setting_退出登录" />

</LinearLayout>