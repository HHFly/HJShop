<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="193px"
        android:textSize="32px"
        android:text=""
        android:background="@mipmap/ic_start_button"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:paddingRight="117px"
        android:paddingLeft="117px"
        android:paddingTop="30px"
        android:paddingBottom="30px"/>
    <RelativeLayout
        android:id="@+id/rl_point"
        android:layout_width="360px"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="193px">

        <com.mark.app.hjshop4a.widget.WarpLinearLayout
            android:visibility="gone"
            android:id="@+id/ll_guide_point_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35px"
            app:grivate="left"
            app:horizontal_Space="100px"
            app:isFull="false"
            app:vertical_Space="30px" />
        <ImageView
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/select_point"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/select_point" />

        <ImageView
            android:layout_centerInParent="true"
            android:visibility="visible"
            android:id="@+id/select_point2"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/select_point" />

        <ImageView
                android:layout_alignParentRight="true"
            android:visibility="visible"
            android:id="@+id/select_point3"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/select_point" />

        <ImageView

            android:visibility="visible"
            android:id="@+id/select_point1"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/select_point" />
    </RelativeLayout>

</RelativeLayout>

