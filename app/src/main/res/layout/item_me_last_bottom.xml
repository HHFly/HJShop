<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/hm_layout_item_bottom"
        style="@style/hm_item_layout">

        <ImageView
            android:id="@+id/hm_iv_logo"
            style="@style/hm_item_iv" />

        <TextView
            style="@style/hm_item_tv"
            android:id="@+id/hm_tv_item_name"
            />

        <TextView
            android:id="@+id/hm_tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50px"
            android:gravity="center"
            android:text=""
            android:textColor="#999999"
            android:textSize="24px" />

        <ImageView style="@style/hm_img_right"
            android:id="@+id/search_go_btn"/>


    </RelativeLayout>
    <View
        style="@style/BaseLine.Horizontal"
        android:layout_height="19px"
        android:layout_alignParentBottom="true" />
</LinearLayout>