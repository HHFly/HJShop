<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_main_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="100px"
            android:paddingLeft="100px"
            android:paddingTop="14px"
            android:paddingBottom="14px"
            android:text="推荐好友赚大钱"
            android:textSize="@dimen/textsize_30px"
           android:background="@drawable/shape_bg_blue_con_28"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/zxingcode"
            android:layout_width="285px"
            android:layout_height="318px"
                android:padding="@dimen/textsize_10px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:layout_marginBottom="40px"
            android:background="@drawable/shape_gray_square_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="81px">

        <View
            android:layout_width="6px"
            android:layout_height="28px"
            android:layout_marginLeft="31px"
            android:background="@color/color_main_blue"
            android:layout_gravity="center_vertical"></View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorText"
            android:layout_marginLeft="11px"
            android:text="我的推荐"/>
    </LinearLayout>
   <TextView
       android:visibility="gone"
       android:id="@+id/tip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/colorText"
       android:layout_marginLeft="48px"
       android:text="还未有人被邀请，快去分享吧！"/>
</LinearLayout>