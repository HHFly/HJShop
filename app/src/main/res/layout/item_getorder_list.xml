<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20px"
    android:layout_marginLeft="20px"
    android:layout_marginRight="20px"
    android:paddingLeft="26px"
    android:paddingRight="29px"
    android:background="@drawable/shape_white_16px">
    <TextView
        android:id="@+id/tv_subOrderSn"
        style="@style/BaseItem.Tv"
        android:textColor="#999999"
        android:textSize="24px"
        android:layout_marginTop="35px"
        android:minWidth="350px"

        />
    <TextView
        android:id="@+id/tv_copy"
      style="@style/BaseItem.Tv"
        android:layout_width="60px"
        android:layout_height="30px"
        android:text="@string/复制"
        android:textColor="@color/color_main_blue"
        android:textSize="20px"
        android:gravity="center"
        android:background="@drawable/shape_slide_1px_blue"
        android:layout_toRightOf="@id/tv_subOrderSn"
        android:layout_alignBaseline="@id/tv_subOrderSn"
        android:layout_marginLeft="11px"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hm_sdv_productPic"
        style="@style/BaseSDV"
        android:layout_width="162px"
        android:layout_height="162px"
        android:layout_below="@+id/tv_subOrderSn"
        android:layout_marginTop="30px"
        app:layout_auto_basewidth="height"
        app:placeholderImage="@mipmap/ic_logo"
        app:roundAsCircle="false" />
    <TextView
        android:id="@+id/tv_Name"
        style="@style/BaseItem.Tv"
        android:textSize="24px"
        android:textColor="#333333"
        android:text=""
        android:layout_below="@+id/tv_subOrderSn"
        android:layout_marginTop="30px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="20px"
        />
    <TextView
        android:id="@+id/tv_1"
        style="@style/BaseItem.Tv"
        android:textSize="22px"
        android:textColor="#999999"
        android:text="@string/买号"
        android:layout_below="@+id/tv_Name"
        android:layout_marginTop="8px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="20px"
        />
    <TextView
        android:id="@+id/tv_2"
        style="@style/BaseItem.Tv"
        android:textSize="22px"
        android:textColor="#999999"
        android:text="垫付贷款"
        android:layout_below="@+id/tv_1"
        android:layout_marginTop="8px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="20px"
        />
    <TextView
        android:id="@+id/tv_3"
        style="@style/BaseItem.Tv"
        android:textSize="22px"
        android:textColor="#999999"
        android:text="@string/当前步骤"
        android:layout_below="@+id/tv_2"
        android:layout_marginTop="8px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="20px"
        />
    <TextView
        android:id="@+id/tv_4"
        style="@style/BaseItem.Tv"
        android:textSize="22px"
        android:textColor="#999999"
        android:text="赏金"
        android:layout_below="@+id/tv_3"
        android:layout_marginTop="8px"
        android:layout_toRightOf="@+id/hm_sdv_productPic"
        android:layout_marginLeft="20px"
        />

    <TextView
        android:id="@+id/tv_accountName"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_1"

        android:textColor="#333333"
        android:textSize="22px"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_payMent"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_2"
        android:layout_alignParentRight="true"
        android:textSize="22px"
        android:textColor="#333333"
        />
    <TextView
        android:id="@+id/tv_step"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_3"
        android:textSize="22px"
        android:layout_alignParentRight="true"
        android:textColor="#FF6D85"

        />
    <TextView
        android:id="@+id/tv_bounty"
        style="@style/BaseItem.Tv"
        android:layout_alignTop="@+id/tv_4"
        android:layout_alignParentRight="true"
        android:textSize="22px"
        android:textColor="#333333"
        android:text="@string/元"
        />


    <TextView
        android:id="@+id/btn_start"
        android:layout_width="136px"
        android:layout_height="48px"
        android:background="@drawable/shape_blue_24px"
        android:text="@string/继续活动"
        android:textSize="24px"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_bounty"
        android:layout_marginTop="30px"
        android:layout_marginBottom="42px"
        />

    <TextView
        android:id="@+id/btn_close"
        android:layout_width="136px"
        android:layout_height="48px"
        android:background="@drawable/shape_gray_24px"
        android:text="@string/关闭活动"
        android:textSize="24px"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_alignTop="@+id/btn_start"
        android:layout_toLeftOf="@+id/btn_start"
        android:layout_marginRight="34px"
        />
</RelativeLayout>