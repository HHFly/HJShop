<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_16px_bottom"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="15dp">
    <TextView style="@style/BaseItem.Tv"
        android:id="@+id/tv_title"
        android:textColor="#333333"
        android:textSize="12dp"
       android:text="下单付款完成后，请填入下列信息"/>
    <EditText
        android:id="@+id/et_tbOrderSn"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#EFEFEF"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:hint="请输入淘宝订单编号"
        android:textColorHint="#999999"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/et_payPrice"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#EFEFEF"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:hint="请输入付款金额"
        android:inputType="number|numberDecimal"
        android:textColorHint="#999999"
        android:layout_marginTop="10dp"/>
    <com.mark.app.hjshop4a.widget.UpdateStepOneLayout
        android:id="@+id/up_img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="支付成功截图"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <View style="@style/BaseLine.Horizontal"
        android:layout_marginTop="24dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <TextView
            android:id="@+id/tv_3"
            style="@style/BaseItem.Tv"
            android:text="活动剩余时间："
            android:textSize="12dp"
            android:textColor="#FF333333"
            android:layout_below="@+id/tv_2"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_compltetTime"
            style="@style/BaseItem.Tv"
            android:text=""
            android:textSize="12dp"
            android:textColor="#FF289BF8"
            android:layout_alignTop="@id/tv_3"
            android:layout_toEndOf="@+id/tv_3"/>
    </RelativeLayout>

    </LinearLayout>

    <TextView
        style="@style/BaseItem.Tv"
        android:textColor="#FF999999"
        android:textSize="12dp"
        android:singleLine="false"
        android:text="@string/注意事项2"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />
    <Button
        style="@style/BaseBtn.Normal.Important"
        android:id="@+id/btn"
        android:layout_height="25dp"
        android:textSize="14dp"
        android:text="确认提交"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        />
</LinearLayout>