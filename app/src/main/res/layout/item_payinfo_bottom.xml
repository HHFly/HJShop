<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_16px_bottom"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:padding="30px">
    <TextView style="@style/BaseItem.Tv"
        android:id="@+id/tv_title"
        android:textColor="#333333"
        android:textSize="24px"
       android:text="下单付款完成后，请填入下列信息"/>
    <EditText
        android:id="@+id/et_tbOrderSn"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:background="#EFEFEF"
        android:textSize="24px"
        android:paddingLeft="20px"
        android:hint="请输入淘宝订单编号"
        android:textColorHint="#999999"
        android:layout_marginTop="20px"/>
    <EditText
        android:id="@+id/et_payPrice"
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:background="#EFEFEF"
        android:textSize="24px"
        android:paddingLeft="20px"
        android:hint="请输入付款金额"
        android:inputType="number|numberDecimal"
        android:textColorHint="#999999"
        android:layout_marginTop="20px"/>
    <com.mark.app.hjshop4a.widget.UpdateStepOneLayout
        android:id="@+id/up_img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:title="支付成功截图"
        android:layout_marginTop="40px"
        android:layout_gravity="center_horizontal"/>
    <View style="@style/BaseLine.Horizontal"
        android:layout_marginTop="95px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <TextView
            android:id="@+id/tv_3"
            style="@style/BaseItem.Tv"
            android:text="活动剩余时间："
            android:textSize="24px"
            android:textColor="#FF333333"
            android:layout_below="@+id/tv_2"
            android:layout_marginTop="10px"/>
        <TextView
            android:id="@+id/tv_compltetTime"
            style="@style/BaseItem.Tv"
            android:text=""
            android:textSize="24px"
            android:textColor="#FF289BF8"
            android:layout_alignTop="@id/tv_3"
            android:layout_toEndOf="@+id/tv_3"/>
    </RelativeLayout>

    </LinearLayout>

    <TextView
        style="@style/BaseItem.Tv"
        android:textColor="#FF999999"
        android:textSize="24px"
        android:singleLine="false"
        android:text="@string/注意事项2"
        android:lineSpacingExtra="10px"
        android:layout_marginTop="25px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        />
    <Button
        style="@style/BaseBtn.Normal.Important"
        android:id="@+id/btn"
        android:layout_height="100px"
        android:textSize="28px"
        android:text="确认提交"
        android:layout_marginTop="40px"
        android:layout_marginBottom="80px"
        />
</LinearLayout>