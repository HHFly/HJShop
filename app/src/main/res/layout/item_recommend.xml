<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Relayout"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white"
       >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42px"
            android:layout_marginTop="25px"
            android:text="会员名称:"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_24px" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text"
            android:layout_toRightOf="@+id/text"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_24px" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text"
            android:layout_below="@+id/text"
            android:layout_marginTop="18px"
            android:text="注册时间:"
            android:textColor="#666666"
            android:textSize="@dimen/textsize_24px" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text2"
            android:layout_toRightOf="@+id/text2"
            android:textColor="#333333"
            android:textSize="@dimen/textsize_24px" />
    </RelativeLayout>
    <View
        style="@style/BaseLine.Vertical"
        android:layout_width="31px"
        android:layout_height="120px"
        ></View>

    <View
        style="@style/BaseLine.Vertical"
        android:layout_alignParentRight="true"
        android:layout_width="31px"
        android:layout_height="120px"></View>
    <View
        style="@style/BaseLine.Horizontal"
       android:layout_below="@+id/Relayout"
        android:layout_width="match_parent"
        android:layout_height="26px"></View>
</RelativeLayout>