<?xml version="1.0" encoding="utf-8"?>
<com.mark.app.hjshop4a.widget.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/background"
    android:clickable="true">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white">

    <ImageView
        android:id="@+id/item_bank_logo"
        android:layout_width="85px"
        android:layout_height="85px"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_launcher"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="45px"

      />

        <TextView
            android:id="@+id/item_tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_bank_logo"
            android:layout_marginStart="11px"
            android:layout_toEndOf="@+id/item_bank_logo"
            android:text="工商银行"
            android:textColor="@color/colorText"
            android:textSize="@dimen/textsize_28px" />
        <TextView
            android:id="@+id/item_tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_24px"
            android:layout_alignTop="@+id/item_tv_card_number"
            android:layout_alignStart="@+id/item_tv_bank_name"
            android:textColor="#666666"
            android:text="信用卡"
            />
        <TextView
            android:id="@+id/item_tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/textsize_20px"
           android:layout_marginTop="109px"
            android:text="4242 4242 4242 4224"

            android:textColor="@color/colorText"
            android:textSize="@dimen/textsize_24px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/red_fo3a53"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white" />

    </LinearLayout>
</com.mark.app.hjshop4a.widget.SwipeMenuLayout>