<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView style="@style/BaseTab.Iv"
        android:id="@+id/tv_title"
        android:textColor="#333333"
        android:textSize="11dp"
        android:singleLine="true"
        android:ellipsize="end"

        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_img"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        app:placeholderImage="@mipmap/ic_img"
        android:layout_marginTop="6dp"/>
    <TextView style="@style/BaseTab.Iv"
        android:id="@+id/tv_tip"
        android:textSize="13dp"
        android:textColor="#289BF8"
        android:background="@drawable/layer_stroke"
        android:layout_alignBottom="@+id/sdv_img"
        android:text="示例图"
        android:layout_toRightOf="@+id/sdv_img"
        android:layout_marginLeft="14dp"/>
</RelativeLayout>