<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <include layout="@layout/include_titlebar_right_iv"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"

        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:id="@+id/member_id"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="* 会员账号" />

                <TextView
                    android:id="@+id/tv_member_id"
                    style="@style/user_item_tv_content_right"
                    android:hint="请输入会员账号"
                    android:textColorHint="#666666"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        <View style="@style/BaseLine.Horizontal"/>

            <RelativeLayout

                android:id="@+id/member_bill_id"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="金豆换购编号" />

                <TextView
                    android:id="@+id/tv_member_bill_id"
                    style="@style/user_item_tv_content_right"
                    android:hint="请输入金豆换购编号"
                    android:textColorHint="#666666"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>

            <RelativeLayout

                android:id="@+id/roletype"
                style="@style/user_item_layout"
                android:background="@color/white">

                <TextView
                    style="@style/user_item_tv"
                    android:text="* 报单模式"
                    android:id="@+id/textView6" />

                <Spinner
                    android:layout_toEndOf="@+id/textView6"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1.0"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textsize_26px" />

                <ImageView
                    style="@style/BaseImg.Right"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_bottom_gray"

                    />
            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>
            <RelativeLayout

                android:id="@+id/consmue_count"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="* 消费金额" />

                <TextView
                    android:id="@+id/tv_consmue_count"
                    style="@style/user_item_tv_content_right"
                    android:hint="请输入消费金额"
                    android:textColorHint="#666666"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>
            <RelativeLayout
                android:background="@color/white"
                android:id="@+id/service_charge"
                style="@style/user_item_layout"
                >

                <TextView
                    style="@style/user_item_tv"
                    android:text="服务费"
                    android:id="@+id/textView7" />

                <TextView
                    android:id="@+id/tv_service_charge"
                    style="@style/user_item_tv_content_right"
                    android:textColorHint="#666666"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />


            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/textsize_30px"
                android:paddingBottom="@dimen/textsize_20px"
                android:paddingTop="@dimen/textsize_20px"
                android:text="商品信息"
                android:textSize="@dimen/textsize_26px"
                android:textColor="#666666"/>
            <RelativeLayout

            android:id="@+id/commodity_name"
            style="@style/user_item_layout"
            android:background="@drawable/select_normal_bg">

            <TextView
                style="@style/user_item_tv"
                android:text="* 商品名称" />

            <TextView
                android:id="@+id/tv_commodity_name"
                style="@style/user_item_tv_content_right"
                android:hint="请输入商品名称"
                android:textColorHint="#666666"
                android:layout_alignParentEnd="true" />

            <ImageView
                style="@style/BaseImg.Right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>
            <RelativeLayout

                android:id="@+id/commodity_conut"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="* 商品数量" />

                <TextView
                    android:id="@+id/tv_commodity_conut"
                    style="@style/user_item_tv_content_right"
                    android:hint="请输入商品数量"
                    android:textColorHint="#666666"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"/>

            <RelativeLayout

                android:id="@+id/commodity_price"
                style="@style/user_item_layout"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/imageView9"
                    android:text="* 商品单价" />

                <TextView
                    android:id="@+id/tv_commodity_price"
                    style="@style/user_item_tv_content_right"
                    android:hint="请输入商品单价"
                    android:textColorHint="#666666"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    style="@style/BaseImg.Right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/imageView9" />
            </RelativeLayout>
            <View style="@style/BaseLine.Horizontal"></View>
            <RelativeLayout
                android:id="@+id/money_count"
                style="@style/user_item_layout"
                android:layout_height="120px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/select_normal_bg">

                <TextView
                    style="@style/user_item_tv"
                    android:text="* 验证码"
                    android:id="@+id/textView4" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/audit"
                    android:layout_width="220px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/et_audit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_toEndOf="@+id/textView4"
                    android:layout_toStartOf="@+id/audit"
                    android:layout_marginRight="@dimen/textsize_10px"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入验证码"
                    android:maxLength="4"
                    android:paddingRight="20px"
                    android:singleLine="true"
                    android:textColorHint="#666666"
                    android:textSize="@dimen/textsize_26px" />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/textsize_30px"
                android:paddingBottom="@dimen/textsize_20px"
                android:paddingTop="@dimen/textsize_20px"
                android:text="* 购买单据"
                android:textSize="@dimen/textsize_26px"
                android:textColor="#666666"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imagebtn"
                android:layout_width="200px"
                android:layout_height="180px"
                android:layout_marginLeft="70px"
                app:placeholderImage="@mipmap/gird_storeimg_update"
           />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30px"
                    android:layout_toRightOf="@+id/imagebtn"
                    android:layout_centerVertical="true"
                    android:text="请上传单据"/>
            </RelativeLayout>
            <Button
                android:layout_marginBottom="200px"
                android:id="@+id/button"
                style="@style/BaseBtn.Normal.Important"
                android:layout_width="match_parent"
                android:layout_marginTop="70px"
                android:text="提交" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>