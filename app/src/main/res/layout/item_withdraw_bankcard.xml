<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
     >


        <ImageView
            android:id="@+id/iv_bnak_card"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textsize_30px"
            android:layout_width="50px"
            android:layout_height="50px" />

        <TextView
            android:id="@+id/item_tv_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_bnak_card"
            android:layout_marginLeft="@dimen/textsize_20px"
            android:text="招商银行（8888）"
            android:textColor="#333333"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/iv_bnak_card_slsect"
            android:layout_centerVertical="true"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/textsize_30px"
            />
        <View style="@style/BaseLine.Horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/textsize_30px"/>
    </RelativeLayout>

</LinearLayout>