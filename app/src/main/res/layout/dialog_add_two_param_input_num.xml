<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="610px"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        style="@style/BaseItem.Tv"
        android:textSize="32px"
        android:textColor="#333333"
        android:layout_marginLeft="36px"
        android:layout_marginTop="49px"

        />
    <EditText
        android:id="@+id/et_value"
        android:layout_marginTop="58px"
        android:layout_marginBottom="73px"
        android:layout_marginRight="38px"
        android:layout_marginLeft="38px"
        android:layout_width="match_parent"
        android:layout_height="78px"
        android:textColorHint="#999999"
        android:hint="请输入您的QQ账号"
        android:paddingLeft="28px"
        android:background="@drawable/shape_efefef_10px"
        android:maxLength="20"
        android:maxEms="20"
        android:ellipsize="end"
        android:singleLine="true"

        android:textSize="@dimen/textsize_28px" />
    <View style="@style/BaseLine.Horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91px">

        <Button
            android:id="@+id/normal_btn_left"
            style="@style/BaseBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#EFEFEF"
            android:padding="0px"
            android:text="@string/btn_msg_cancel"
            android:textColor="#999999"
            android:textSize="32px" />

        <View style="@style/BaseLine.Vertical" />

        <Button
            android:id="@+id/normal_btn_right"
            style="@style/BaseBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#289BF8"
            android:padding="0px"
            android:text="@string/保存"
            android:textColor="#FFFFFF"
            android:textSize="32px" />

    </LinearLayout>
</LinearLayout>