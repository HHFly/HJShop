<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Theme.AppLauncher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@mipmap/ic_welcome</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="home_pager_tab_layout" parent="BaseTab.Layout"></style>

    <style name="home_pager_tab_iv" parent="BaseTab.Iv">
        <item name="android:layout_width">50px</item>
        <item name="android:layout_height">50px</item>
    </style>

    <style name="home_pager_tab_tv" parent="BaseTab.Tv">
        <item name="android:textSize">18px</item>
        <item name="android:layout_marginTop">7px</item>
        <item name="android:textColor">@drawable/select_hp_tab_textcolor</item>
    </style>


    <style name="home_me_tab_layout" parent="BaseTab.Layout"></style>

    <style name="home_me_tab_tv_top" parent="BaseTab.Tv">
        <item name="android:textSize">28px</item>
    </style>

    <style name="home_me_tab_tv_bottom" parent="BaseTab.Tv">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">24px</item>
        <item name="android:layout_marginTop">15px</item>

    </style>

    <style name="user_item_tv_content_right">
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginRight">37px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">26px</item>
        <item name="android:text"></item>
    </style>
    <style name="user_item_tv_content">
        <item name="android:textColor">#666666</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxEms">20</item>
        <item name="android:layout_marginRight">37px</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">26px</item>
        <item name="android:text"></item>
    </style>
    <style name="user_item_iv">
        <item name="android:layout_width">42px</item>
        <item name="android:layout_height">47px</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>
    <style name="user_item_tv_bottom" parent="user_item_tv">
        <item name="android:layout_marginLeft">60px</item>
    </style>
    <style name="user_item_tv">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">28px</item>
        <item name="android:text"></item>
    </style>
    <!--layout-->
    <style name="user_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:paddingRight">30px</item>
        <item name="android:layout_height">100px</item>
    </style>
    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="phonecode_layout">
        <item name="android:minWidth">@dimen/edit_title_minWidth</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:paddingLeft">30px</item>
    </style>
    <style name="phonecode_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">10px</item>
        <item name="android:text">@string/login_msg_username</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="phonecode_iv">
        <item name="android:layout_width">17px</item>
        <item name="android:layout_height">9px</item>
        <item name="android:src">@mipmap/ic_bottom</item>
    </style>

    <style name="login_input_tv">
        <item name="android:minWidth">@dimen/edit_title_minWidth</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:textColor">#333333</item>
    </style>
    <style name="login_input_et">
        <item name="android:background">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">28px</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="hm_img_right" parent="BaseImg.Right">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="hm_item_title_layout" parent="BaseItem.Layout">
        <item name="android:layout_height">60px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:background">@drawable/select_normal_bg</item>
    </style>

    <style name="hm_item_vip_layout" parent="BaseItem.Layout">
        <item name="android:layout_height">168px</item>

        <item name="android:background">@drawable/select_normal_bg</item>
    </style>
    <style name="hm_item_layout_lab" parent="BaseItem.Layout">
        <item name="android:layout_height">187px</item>
        <item name="android:layout_width">184px</item>
    </style>
    <style name="hm_item_layout_lab_gone" parent="BaseItem.Layout">
        <item name="android:layout_height">187px</item>
        <item name="android:layout_width">184px</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="hm_item_layout" parent="BaseItem.Layout">
        <item name="android:layout_height">100px</item>
        <item name="android:paddingLeft">20px</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:background">@drawable/select_normal_bg</item>
    </style>
    <style name="hm_item_iv" parent="BaseItem.Iv">
        <item name="android:layout_width">40px</item>
        <item name="android:layout_height">40px</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="hm_item_tv" parent="BaseItem.Tv">
        <item name="android:layout_marginLeft">60px</item>
        <item name="android:textSize">26px</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!--Theme.Dialog||Theme.Holo.Light.Dialog-->
    <style name="dialog_lhp" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--selectdatedialog-->
    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
        //退出时的动画
    </style>
    <style name="tab_tv" parent="BaseLayout.WrapMatch">
        <item name="android:textSize">28px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/select_normal_tab_textcolor_333333</item>
        <item name="android:background">@drawable/select_tab_order</item>
    </style>
    <!-- 对话框样式 -->
    <style name="dialog_bottom_full" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
</resources>
