<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="img" format="reference"/>
    <declare-styleable name="UpdateImgayout">
        <attr name="img" />
        <attr name="title" format="string"/>
        <attr name="tipimg" format="reference"/>
    </declare-styleable>

    <declare-styleable name="BindInfoLayout">
        <attr name="img"/>
        <attr name="msg" format="string"/>
        <attr name="status" format="string"/>

    </declare-styleable>
    <declare-styleable name="WarpLinearLayout">
        <!-- 内容的对齐方式 -->
        <attr name="grivate" format="enum">
            <enum name="right" value="0"></enum>
            <enum name="left" value="1"></enum>
            <enum name="center" value="2"></enum>
        </attr>
        <!-- 左右间距 -->
        <attr name="horizontal_Space" format="dimension"></attr>
        <!-- 上下间距 -->
        <attr name="vertical_Space" format="dimension"></attr>
        <!-- 是否充满当前行 -->
        <attr name="isFull" format="boolean"></attr>
        <!-- 最大行数 -->
        <attr name="maxLine" format="integer"></attr>
    </declare-styleable>

    <declare-styleable name="CalendarView">
        <!--是否显示农历-->
        <attr name="show_lunar" format="boolean" />
        <!--是否显示上月和下月-->
        <attr name="show_last_next" format="boolean" />
        <!--是否显示节假日-->
        <attr name="show_holiday" format="boolean" />
        <!--是否显示节气-->
        <attr name="show_term" format="boolean" />
        <!--阳历的日期颜色-->
        <attr name="solar_color" format="color" />
        <!--阳历的日期尺寸-->
        <attr name="solar_size" format="integer" />
        <!--农历的日期颜色-->
        <attr name="lunar_color" format="color" />
        <!--农历的日期尺寸-->
        <attr name="lunar_size" format="integer" />
        <!--节日文字颜色-->
        <attr name="holiday_color" format="color" />
        <!--选中的日期文字颜色-->
        <attr name="choose_color" format="color" />
        <!--选中的日期背景-->
        <attr name="day_bg" format="reference" />
        <!--单选时切换月份，是否选中上次的日期-->
        <attr name="switch_choose" format="boolean" />
        <!--设置单选、多选-->
        <attr name="choose_type" format="enum">
            <enum name="single" value="0" />
            <enum name="multi" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WeekView">
        <!--周的表示形式（x.x.x.x.x.x.x）-->
        <attr name="week_str" format="string" />
        <!--周的文字颜色-->
        <attr name="week_color" format="color" />
        <!--周的文字大小-->
        <attr name="week_size" format="integer" />
    </declare-styleable>

    <declare-styleable name="SmoothCheckBox">
        <!-- 动画持续时间 -->
        <attr name="duration" format="integer"></attr>
        <!-- 边框宽度 -->
        <attr name="strikeWidth" format="dimension|reference"></attr>
        <!-- 边框颜色 -->
        <attr name="borderColor" format="color|reference"></attr>
        <!-- 选中状态的颜色 -->
        <attr name="trimColor" format="color|reference"></attr>
        <!-- 对勾颜色 -->
        <attr name="tickColor" format="color|reference"></attr>
        <!-- 对勾宽度 -->
        <attr name="tickWidth" format="dimension|reference"></attr>
    </declare-styleable>
</resources>